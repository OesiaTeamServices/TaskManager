@model Oesia.Models.Submodule
@inject Oesia.Services.OesiaServices Services

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-md-4 col-md-offset-4 col-sm-4 col-sm-offset-4 col-xs-6 col-xs-offset-3">
        <h2>Create New Submodule</h2>
        <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SubmoduleId" class="control-label"></label>
                <input asp-for="SubmoduleId" class="form-control" />
                <span asp-validation-for="SubmoduleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Assign it to a module</label>
                <p></p>
                <select asp-for="ModuleId">
                    <option value="">Choose a module...</option>
                    @foreach (Module item in Services.GetModulesDB())
                    {
                        <option value="@item.Id">@item.ModuleId</option>
                    }
                </select>
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstimatedHours" class="control-label"></label>
                <input asp-for="EstimatedHours" class="form-control" />
                <span asp-validation-for="EstimatedHours" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="ElapsedHours" class="control-label"></label>
                <input asp-for="ElapsedHours" class="form-control" />
                <span asp-validation-for="ElapsedHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PendingHours" class="control-label"></label>
                <input asp-for="PendingHours" class="form-control" />
                <span asp-validation-for="PendingHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
                @*<a class="btn btn-default" asp-area="" asp-controller="Tasks" asp-action="Create">Add Task</a>*@
            </div>
        </form>
        <div>
            <a asp-action="Index">Back to List Of Submodules</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
